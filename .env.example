## Mobile -> Backend
# IMPORTANT: on Android device, localhost means the phone.
# Use your PC LAN IP for the API server.
EXPO_PUBLIC_API_URL=http://192.168.50.213:3001

## Supabase (already used by the app)
EXPO_PUBLIC_SUPABASE_URL=your_supabase_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

## Perplexity (real-time web insights)
PERPLEXITY_API_KEY=your_perplexity_api_key
PERPLEXITY_MODEL=sonar-pro

## AI Provider (LLM itinerary generation)
# If AI_PROVIDER is not set, the server will auto-pick based on available keys.
AI_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

